CC = g++
CFLAGS = -pthread

all: papply_filter apply_filter

apply_filter: apply_filter.cpp
	$(CC) $(CFLAGS) -o apply_filter apply_filter.cpp

papply_filter: papply_filter.cpp
	$(CC) $(CFLAGS) -o papply_filter papply_filter.cpp

run1:
	./apply_filter oimage.txt BlurMask.txt output.txt

run2:
	./papply_filter oimage.txt BlurMask.txt output.txt 4

clean:
	rm -f apply_filter papply_filter output.txt

